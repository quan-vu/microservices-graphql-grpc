{
  "name": "gateway",
  "version": "1.0.0",
  "description": "Microservices Graphql API Gateway using gRPC",
  "repository": "https://github.com/quan-vu/microservices-graphql-grpc.git",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "lint": "npm run lint-prettier && npm run lint-ts",
    "lint-ts": "tsc --noEmit && tslint --project tsconfig.json --format verbose 'src/**/*.ts'",
    "lint-prettier": "prettier -l 'src/**/*.ts' || echo 'files are different to code formatter, run `npm run prettier` to fix'",
    "prettier": "prettier --write 'src/**/*.ts'",
    "watch-ts": "tsc --watch",
    "nodemon": "nodemon --inspect --delay 1 --ext ts --watch src dist/index.js"
  },
  "author": "Quan Vu",
  "license": "MIT",
  "devDependencies": {
    "@types/graphql": "^14.0.7",
    "@types/node": "^11.9.4",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.4.0",
    "apollo-server": "^2.4.2",
    "bluebird": "^3.5.3",
    "google-protobuf": "^3.7.0-rc.2",
    "graphql": "^14.1.1",
    "graphql-playground-middleware-express": "^1.7.11",
    "graphql-voyager": "^1.0.0-rc.26",
    "grpc": "^1.24.9",
    "grpc-tools": "^1.6.6",
    "log4js": "^4.0.2",
    "typescript": "^3.3.3"
  }
}
